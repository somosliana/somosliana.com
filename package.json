{
  "private": true,
  "scripts": {
    "clean": "rimraf public",
    "start": "npm-run-all --parallel dev:tailwind dev:eleventy",
    "dev:eleventy": "cross-env NODE_ENV=development eleventy --serve",
    "dev:tailwind": "npx tailwindcss -i ./tailwind.css -o ./public/tailwind.css --watch",
    "dev:netlifycms": "npx netlify-cms-proxy-server",
    "build": "npm-run-all build:eleventy build:tailwind",
    "build:eleventy": "cross-env NODE_ENV=production eleventy",
    "build:tailwind": "cross-env NODE_ENV=production npx tailwindcss -i ./tailwind.css -o ./public/tailwind.css --minify"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.1",
    "@fortawesome/fontawesome-free": "^5.15.2",
    "@tailwindcss/typography": "github:tailwindcss/typography",
    "alpinejs": "^2.8.0",
    "autoprefixer": "^10.2.3",
    "cross-env": "^7.0.3",
    "daisyui": "^0.13.3",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "eleventy-plugin-seo": "^0.5.1",
    "html-minifier": "^4.0.0",
    "js-yaml": "^3.14.1",
    "luxon": "^1.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.3.2",
    "prismjs": "^1.24.1",
    "rimraf": "^2.7.1",
    "tailwindcss": "^2.0.2"
  }
}
